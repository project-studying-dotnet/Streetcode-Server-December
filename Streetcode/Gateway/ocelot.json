{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{controller}/{action}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "streetcode-webapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/streetcode/{controller}/{action}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "SwaggerKey": "streetcode"
    },
    {
      "DownstreamPathTemplate": "/api/{controller}/{action}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "emailservice-webapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/emailService/{controller}/{action}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "SwaggerKey": "emailService"
    },
    {
      "DownstreamPathTemplate": "/api/{action}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "userservice-webapi",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/userService/{action}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "SwaggerKey": "userService"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "streetcode",
      "Config": [
        {
          "Name": "Streetcode API",
          "Version": "v1",
          "Url": "https://localhost:5001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "emailService",
      "Config": [
        {
          "Name": "Email Service API",
          "Version": "v1",
          "Url": "https://emailservice-webapi:80/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "userService",
      "Config": [
        {
          "Name": "User Service API",
          "Version": "v1",
          "Url": "https://userservice-webapi:80/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://ocelot-apigateway:80"
  }
}
